{
   "compileOnSave": true,
   "stripInternal": true,
   "exclude": ["node_module", "./dist"],
   "include": ["./tests/**/*.test.ts", "./src/**/*.ts"],
   "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "CommonJS",
    "skipLibCheck": true,
    "paths": {
      "@lib": ["lib/index.ts"]
    },

    /* Compiling */
    "incremental": false,
    "inlineSourceMap": true,
    "declaration": true,
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "removeComments": true,

    /* Strict Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",

    /* Types */
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    /* Module Resolution */
    "resolveJsonModule": true,
    "esModuleInterop": true,
   }
}